extends pug/layout/master_layout.pug
include pug/mixins/breadcrumb.pug

block content

	// Start Breadcrumb
	+breadcrumb('Login')
	// End Breadcrumb

	// Start Account
	section.account 
		.container 
			.row 
				.col-lg-5
					.login-img
						img(src="../images/account/account.png", alt="")
				.col-lg-7
					.account-form 
						h2.text-start Login
						form(action="" class='custom-form') 
							input(type="text" class="form-control" placeholder="Username or email")
							input(type="text" class="form-control" placeholder="Password")
							.remember.text-start
								input(type="checkbox", name="remember", id="remember")
								label(for="remember") Remember Me
							.login-btn.text-start
								a(href="" class="btn") Log In
								

	// End Account