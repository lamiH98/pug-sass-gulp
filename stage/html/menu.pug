extends pug/layout/master_layout.pug
include pug/mixins/breadcrumb.pug

block content
	
	// Start Breadcrumb
	+breadcrumb('Menu')
	// End Breadcrumb

	// Start Title Menu
	section.menu-title 
		.container 
			.row 
				.col-md-6 
					h2.text-capitalize Our beutiful Menu
	// End Title Menu

	// Start Menu
	-
		let menuFoods = [
			{ 'img': '../images/food/food-item-6.jpg', 'title': 'Burger King', 'price': 15, 'rating': 4},
			{ 'img': '../images/food/food-item-3.jpg', 'title': 'Popeyes', 'price': 9, 'rating': 5},
			{ 'img': '../images/food/food-item-4.jpg', 'title': 'KFC', 'price': 18, 'rating': 3},
			{ 'img': '../images/food/food-item-5.jpg', 'title': 'Chevrefrit au miel', 'price': 11, 'rating': 5},
		];
		let menuHead = [ 'Desserts', 'Drinks', 'Main dishes', 'Starters']
	each menuTitle in menuHead.length ? menuHead : ['There are no values']
		section.menu 
			.container 
				.row 
					.col-md-6 
						.menu-head 
							h3.title #{menuTitle}
							p.desc Lorem ipsum dolor sit amet consectetur, adipisicing elit. Delectus velit earum sapiente.
				.row 
					each val in menuFoods.length ? menuFoods : ['there are no values']
						.col-md-3
							.popular-food
								.popular-food-img
									img(src=val.img, alt="") 
								.popular-head
									a(href=""): h5.popular-title= val.title
									span.price $#{val.price}
								p.details  Lorem ipsum dolor sit amet consectetur, adipisicing elit. Maxime, quos tenetur
								.rating
									- for(let i = 0; i < val.rating; i++)
										i.fas.fa-star
	// End Menu

	// Start discount
	section.menuDiscount
		.container 
			.row 
				.col-lg-6 
					.discount-box.d-flex.align-items-center
						.discount-content 
							span -50%
							h5 Discount for all burgers!
							a(href="" class="btn") Get It Now
						.discount-img
							img(src="../images/food/discount-img.png", alt="")
				.col-lg-6 
					.discount-box.d-flex.align-items-center
						.discount-content 
							span For Free
							h5 Visit Our C0FE and get your coffee*
							a(href="" class="btn") Get It Now
						.discount-img
							img(src="../images/food/discount-img-2.png", alt="")
	// End discount